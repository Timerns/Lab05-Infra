<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <title>Management UI</title>
    </head>
    <body>
        <%- include('../partials/modal.ejs') %>
        <%- include('../partials/navbar.ejs', { active: 'images' }) %>
        <!-- Body -->
        <div style="padding: 10px;">
            <table class="table">
                <thread>
                    <tr>
                        <th scope="col">Tags</th>
                        <th scope="col">Size</th>
                        <th scope="col">Created At</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thread>
                <tbody class="table-group-divider">
                    <% images.forEach(image => { %>
                        <tr>
                            <th class="align-middle" scope="row">
                              <% image.tags.forEach(tag => { %>
                                  <span><%= tag %></span><br />
                              <% }); %>
                            </td>
                            <td class="align-middle"><%= image.size %></td>
                            <td class="align-middle"><%= image.createdAt %></td>
                            <td class="align-middle">
                                <button type="button" class="btn btn-success" onclick="<%= "addContainer(\"" + image.id +"\", this)" %>">Run image</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <%- include('../partials/scripts.ejs') %>
    </body>
</html>

