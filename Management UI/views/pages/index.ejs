<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <title>Management UI</title>
    </head>
    <body>
        <%- include('../partials/modal.ejs') %>
        <%- include('../partials/navbar.ejs', { active: 'containers' }) %>
        <!-- Body -->
        <div style="padding: 10px;">
            <table class="table">
                <thread>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">State</th>
                        <th scope="col">Status</th>
                        <th scope="col">Ports</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thread>
                <tbody class="table-group-divider">
                    <% containers.forEach(container => { %>
                        <tr>
                            <th class="align-middle" scope="row"><%= container.name %></td>
                            <td class="align-middle"><%= container.state %></td>
                            <td class="align-middle"><%= container.status %></td>
                            <td class="align-middle">
                                <% container.ports.forEach(port => { %>
                                    <span><%= port %></span><br />
                                <% }); %>
                            </td>
                            <td class="align-middle">
                                <button type="button" class="btn btn-success" onclick="<%= "startContainer(\"" + container.id + "\", this)" %>">Start</button>
                                <button type="button" class="btn btn-danger" onclick="<%= "stopContainer(\"" + container.id + "\", this)" %>">Stop</button>
                                <button type="button" class="btn btn-danger" onclick="<%= "removeContainer(\"" + container.id + "\", this)" %>">Remove</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <%- include('../partials/scripts.ejs') %>
    </body>
</html>

